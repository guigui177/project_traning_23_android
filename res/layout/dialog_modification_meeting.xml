<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:padding="5dp" >

        <TextView
            android:id="@+id/dialog_modification_meeting_name_title_tv"
            android:layout_columnSpan="2"
            android:layout_gravity="top|left"
            android:text="Name :" />

        <EditText
            android:id="@+id/dialog_modification_meeting_name_et"
            android:layout_columnSpan="2"
            android:layout_gravity="top|fill_horizontal"
            android:ems="10"
            android:singleLine="true" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/dialog_modification_meeting_from_title_tv"
            android:layout_columnSpan="2"
            android:layout_gravity="top|left"
            android:text="From :" />

        <DatePicker
            android:id="@+id/dialog_modification_meeting_from_dp"
            android:layout_columnSpan="2"
            android:layout_gravity="top|left" />

        <TimePicker
            android:id="@+id/dialog_modification_meeting_from_tp"
            android:layout_columnSpan="2"
            android:layout_gravity="top|left" />

        <TextView
            android:id="@+id/dialog_modification_meeting_to_title_tv"
            android:layout_columnSpan="2"
            android:layout_gravity="top|left"
            android:text="To :" />

        <DatePicker
            android:id="@+id/dialog_modification_meeting_to_dp"
            android:layout_columnSpan="2"
            android:layout_gravity="top|left" />

        <TimePicker
            android:id="@+id/dialog_modification_meeting_to_tp"
            android:layout_columnSpan="2"
            android:layout_gravity="top|left" />

        <TextView
            android:id="@+id/dialog_modification_meeting_location_title_tv"
            android:layout_columnSpan="2"
            android:layout_gravity="top|left"
            android:text="Where to meet?" />

        <EditText
            android:id="@+id/dialog_modification_meeting_location_et"
            android:layout_columnSpan="2"
            android:layout_gravity="top|fill_horizontal"
            android:ems="10"
            android:inputType="textMultiLine"
            android:maxLines="3" />

        <Button
            android:id="@+id/dialog_modification_meeting_validate_bt"
            android:layout_columnSpan="2"
            android:layout_gravity="top|center_horizontal"
            android:text="OK" />
    </GridLayout>

</ScrollView>