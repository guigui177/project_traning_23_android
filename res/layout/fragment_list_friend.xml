<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/fragment_listfriend_button_addfriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_listfriend_menu_addfriend" />

        <Button
            android:id="@+id/fragment_listfriend_button_delfriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_listfriend_menu_delfriend" />

    </LinearLayout>

    <ListView
    android:id="@+id/fragment_listfriend_list_listfriend"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	</ListView>
    
</LinearLayout>