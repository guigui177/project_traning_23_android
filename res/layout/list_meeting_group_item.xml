<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_meeting_group_item_gl"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/list_meeting_group_item_name_meeting_tv"
        android:layout_columnSpan="1"
        android:layout_gravity="left|top"
        android:layout_margin="5dp"
        android:layout_rowSpan="1"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:text="TextView" />

    <Button
        android:id="@+id/list_meeting_group_item_validate_bt"
        android:layout_columnSpan="1"
        android:layout_gravity="center_horizontal"
        android:layout_rowSpan="2"
        android:text="M" />

    <Button
        android:id="@+id/list_meeting_group_item_participant_bt"
        android:layout_columnSpan="1"
        android:layout_gravity="center_horizontal"
        android:layout_rowSpan="2"
        android:text="P" />

    <TextView
        android:id="@+id/list_meeting_group_item_status_tv"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_gravity="left"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_row="1"
        android:layout_rowSpan="1"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</GridLayout>