<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/fragment_listresto_text_typeresto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_addfriend_text_namefriend"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/fragment_listresto_text_restoname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/fragment_addfriend_inputtext_friendname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/fragment_addfriend_button_addfriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_addfriend_button_addfriend" />

</LinearLayout>